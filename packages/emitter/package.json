{
  "name": "@reatom/future",
  "version": "2.0.0-alpha.0",
  "description": "Future of friendly FRP",
  "homepage": "https://github.com/artalar/reatom/tree/master/packages/future",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artalar/reatom.git"
  },
  "license": "MIT",
  "source": "src/index.ts",
  "main": "build/index.js",
  "umd:main": "build/index.umd.js",
  "module": "build/index.es.js",
  "unpkg": "build/index.umd.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run rebuild && npm run test",
    "postpublish": "npm run clean",
    "build": "cross-env fixme=fixme ../../node_modules/.bin/microbundle --external=future",
    "clean": "cross-env fixme=fixme ../../node_modules/.bin/rimraf build/",
    "rebuild": "npm run clean && npm run build",
    "test": "cross-env fixme=fixme ../../node_modules/.bin/uvu tests/*",
    "test:watch": "cross-env fixme=fixme ../../node_modules/.bin/uvu --watch",
    "test:debug": "node --inspect-brk ../../node_modules/.bin/uvu --runInBand",
    "prettify": "cross-env fixme=fixme ../../node_modules/.bin/prettier --write '**/*.{js,ts,md}'",
    "prettify:watch": "cross-env fixme=fixme ../../node_modules/.bin/onchange '**/*.{js,ts,md}' -- prettier --write {{changed}}",
    "ts-check": "cross-env fixme=fixme ../../node_modules/.bin/tsc --noEmit",
    "ts-check:watch": "npm run ts-check -- --watch",
    "update": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "cross-env": "^5.2.1",
    "effector": "^20.15.8",
    "rxjs": "^6.6.2",
    "typescript": "^4.0.2",
    "uvu": "^0.2.3"
  },
  "author": "artalar",
  "maintainers": [
    {
      "name": "artalar"
    }
  ],
  "readme": "README.md",
  "bugs": {
    "url": "https://github.com/artalar/reatom/issues"
  },
  "keywords": [
    "observable",
    "observables",
    "rx",
    "future",
    "futures",
    "reactive",
    "reactivity"
  ],
  "files": [
    "/README.md",
    "/package.json",
    "/index.ts",
    "/build"
  ],
  "dependencies": {
    "symbol-observable": "^2.0.1"
  }
}
