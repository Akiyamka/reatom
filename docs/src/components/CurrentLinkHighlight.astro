<script>
  document.querySelectorAll('nav a').forEach((el) => {
    const a = el as HTMLAnchorElement

    if (new URL(a.href).pathname === location.pathname) {
      a.classList.add('current')
    }
  })
</script>
<style is:global>
  a.current {
    border-bottom: 0.5rem double var(--mono-main);
  }
</style>
